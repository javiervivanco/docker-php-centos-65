[core]
editor      = vim
fileMode    = false
whitespace  = trailing-space,space-before-tab,indent-with-non-tab

[color]
branch      = true
status      = true
interactive = true
ui          = true
diff        = auto
status      = auto
branch      = auto
interactive = auto
ui          = true
pager       = true
[color "branch"]
current     = yellow reverse
local       = yellow
remote      = green

[color "diff"]
meta        = yellow bold
frag        = magenta bold
old         = red bold
new         = green bold

[color "status"]
added       = yellow
changed     = green
untracked   = cyan


[alias]
co          = checkout
br          = branch
ci          = commit
st          = status
unstage     = reset HEAD --
st          = status
ci          = commit
br          = branch
co          = checkout
df          = diff
lg          = log -p
who         = shortlog -s --
lol         = log --graph --decorate --pretty=oneline --abbrev-commit
lola        = log --graph --decorate --pretty=oneline --abbrev-commit --all

[credential]
helper = cache --timeout 604800
